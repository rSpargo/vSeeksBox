{
    "manifest_version": 2,
    "name": "vSeeksBox",
    "version": "1.0",
    "description": "Create vSeeks to help you get stuff done! This is primarily a procrastination aide.",
    /* "icons": {
        "16": "images/icons/16.png",
        "48": "images/icons/48.png",
        "128": "images/icons/16.png"
    }, */
    "browser_action": {
        "default_popup": "./html/popup.html",
        "default_title": "vSeeksBox"
    },

    "options_page": "./html/preferences.html",

    "background": {
        "scripts": [
            "./js/eventPage.js"
        ],
        "persistent": false
    } ,

    "permissions": [
        "notifications",
        "storage",
        "alarms"
    ],
    
    "author": "Ryan 'neuSpargo' Spargo"
}